<h2>All posts:</h2>
<p>
    <a href="/posts/new">Create New</a>
</p>
<ol>
    {{#each posts}}
    <li>
        <p>{{this.title}}</p>
        <p>{{this.user}} posted at: {{this.createdAt}}</p>
        <p>View Article:
            <a href="{{this.link}}">{{this.link}}</a>
        </p>
        <p>
            <a href="/posts/{{this.id}}">Comments</a>
        </p>
    </li>
    {{/each}}
</ol>