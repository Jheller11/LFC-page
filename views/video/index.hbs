<h2>Videos</h2>
<p>
    <a href="/videos/new">Create New</a>
</p>

{{#each videos}}
<div class="hoverable card-panel">
    <p>{{description}}</p>
    <iframe width="560" height="315" src="https://www.youtube.com/embed/{{embed_link}}" frameborder="0" allow="autoplay; encrypted-media"
        allowfullscreen></iframe>

    <form action="/videos/{{this.id}}?_method=delete" method="POST">
        <input type="submit" value="Delete Video">
    </form>
</div>
{{/each}}